@using Bookish.Models.Models
@model Bookish.Models.Catalogue;

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>This is the Search Page</h2>

<table style="width:100%">
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Year Published</th>
        <th>Checked Out</th>
        <th>On Shelf</th>
        
        
    </tr>
    @foreach (Book book in Model.BookList)
    {
        <tr>
            <td>@book.Title</td>
            <td>@book.AuthorLastName, @book.AuthorFirstName </td>
            <td>@book.YearPublished</td>
            <td>@book.NumberCheckedOut</td>
            <td>@book.NumberInStock</td>
            <td><button type="button" onclick="location.href='@Url.Action("AddCopy", "Books", new {id = book.BookId})'" />Add Copy</td>
            <td><button type="button" onclick="location.href='@Url.Action("DeleteCopy", "Books", new {id = book.BookId})'" />Delete Copy</td>
        </tr>
    }
</table>